<html>
    <head>
        <title>contact info</title>
         <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
         <link rel="stylesheet" type="text/css" href="/distillery.css">
         <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

         
    </head>

    <body>
        <div id="wrapper">
        <div id="top">
        </div>
        <div id="email">
            <form method="POST" action="/contact_us">
                <h3 class="tittle" > Name:</h3>
                <input class="field" type="text" name="name" value="your name"><br>
                <h3 class="tittle">E-mail:</h3>
                <input class="field" type="text" name="email" value="your email"><br>
                <h3 class="tittle">YOUR ENQUIRY</h3>
                <textarea id="comment" name="comment"></textarea><br> 
                <input class="bottom" type="submit" value="Send">
                <input class="bottom" type="reset" value="Reset">
            </form>
        </div>

        <div>
            <i class="fa fa-align-left fa-3x" id="check" ></i>
        </div>

    </div>
    <footer>
    <a href="http://www.facebook.com"><i class="fa fa-facebook-official"></i></a>
    <i class="fa fa-instagram"></i>
    
    </footer>
        <script> 
            $(document).ready(function(){
                var turn=0
                $("#check").click(function(){
                    if (turn==0){
                        $("#email").animate({left: '930px'},1000);
                        turn=1
                    }else{
                        $("#email").animate({left: '100px'},1000);
                    turn=0
                    }
                });
            });
        </script> 
    </body>

</html>

